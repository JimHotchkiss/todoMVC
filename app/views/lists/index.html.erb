<section class="todoapp">
	<header class="header">
    <h1>Your List</h1>
    <input class="new-todo" placeholder="What needs to be done?" autofocus="">
  </header>

    <section class="main">
      <input id="toggle-all" class="toggle-all" type="checkbox">
      <label for="toggle-all">Mark all as complete</label>
      
      <ul class="todo-list">
        <% @lists.each do |list| %>
          <li>
            <div class="view">
            <label> <%= link_to list.name, list_path(list), class: "todo-link" %> </label> 
            </div>
          </li>
        <%end%>
      </ul>
    </section>
      
  <footer class="footer">
    <span class="todo-count"></span>
  </footer>
</section>
  

  